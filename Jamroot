project table
  : requirements
    <link>static
    <cxxflags>-std=c++11
    <debug-symbols>on
  : default-build
  : build-dir bin
  ;

import testing ;

alias table
  : # sources
  : # requirements
  : # default-build
  : # usage-requirements
    <include>include
  ;

unit-test table_test
  : # sources
    test/table_test.cpp
    table
    /boost/test//boost_unit_test_framework
  ;

unit-test array_cat_test
  : # sources
    test/array_cat_test.cpp
    table
    /boost/test//boost_unit_test_framework
  ;

unit-test array_cat_element_test
  : # sources
    test/array_cat_element_test.cpp
    table
    /boost/test//boost_unit_test_framework
  ;
  